<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <!--telling spring container for creating object  -->
     <!-- student class object   -->
     <bean class="in.sp.beans.Student" id = "stdId">
        <!-- giving value to variable -->
           <property name="name" value = "Pranit"/>
           <property name="rollno" value = "21"/>
           <property name="email" value = "pranit@gmail.com"/>
     
     </bean>
     
     <!-- Second Object -->
     <bean class="in.sp.beans.Student" id = "stdId2">
        <!-- giving value to variable -->
           <property name="name" value = "Sahil"/>
           <property name="rollno" value = "05"/>
           <property name="email" value = "sahil@gmail.com"/>
     
     </bean>
</beans>